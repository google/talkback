<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <com.google.android.accessibility.brailleime.tutorial.VerticalTextView
      android:id="@+id/hint_toast"
      style="@style/TutorialHintToast"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginHorizontal="@dimen/hint_margin" />

  <com.google.android.accessibility.brailleime.tutorial.VerticalTextView
      android:id="@+id/action_result"
      style="@style/TutorialActionResult"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</FrameLayout>