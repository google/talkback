<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--The theme is for preference settings-->
  <style name="SettingsTheme" parent="Theme.AppCompat.DayNight" >
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarTheme">@style/SettingsActionBarTheme</item>
  </style>

  <style name="SettingsActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="android:textColorPrimary">@color/settings_primary_text</item>
    <item name="android:background">@color/settings_background</item>
  </style>

  <!--The theme for alert dialog-->
  <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="BrailleImeTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
    <item name="android:textAllCaps">false</item>
  </style>

</resources>
