<resources>

  <!--The basic theme for service-->
  <style name="BaseTheme" parent="Theme.AppCompat.DayNight"/>

  <!--The theme is for preference settings-->
  <style name="TalkBackSettings" parent="Theme.AppCompat.DayNight" >
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarTheme">@style/SettingsActionBar</item>
  </style>

  <style name="SettingsActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="android:textColorPrimary">@color/actionBarTextColorPrimary</item>
    <item name="android:background">@color/settings_bg_color</item>
  </style>

  <style name="DialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- The theme applied to the tutorial activity -->
  <style name="TutorialActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:actionBarStyle">@style/TutorialActionBar</item>
  </style>

</resources>