<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="locale"
    android:scrollbarStyle="outsideOverlay"
    android:theme="@style/A11yAlertDialogCustomViewTheme"
    android:gravity="top">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirm_download_dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="top|center_horizontal"
        android:textAppearance="@style/A11yAlertDialogSubtitleStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirm_download_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textAppearance="@style/A11yAlertDialogContentTextStyle"/>

    <CheckBox
        android:id="@+id/confirm_download_dialog_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/CheckBoxTheme"
        android:minHeight="48dp"
        android:checked="false"
        android:visibility="gone"
        android:textAppearance="@style/A11yAlertDialogContentTextStyle"/>

  </LinearLayout>

</ScrollView>
