<resources>

  <!--The theme for alert dialog-->
  <style name="A11yAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/a11y_colorAccent</item>
    <item name="android:background">@color/a11y_alert_dialog_bg_color</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!--The theme for the view content inside alert dialog-->
  <style name="A11yAlertDialogCustomViewTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

  <!--The theme for the text of the content inside alert dialog-->
  <style name="A11yAlertDialogContentTextStyle">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:textColor">@color/a11y_alert_dialog_content_message_text_color</item>
    <item name="fontFamily">@string/accessibility_font</item>
    <item name="android:textSize">14sp</item>
  </style>

  <!--The theme for the text of the subtitle inside alert dialog-->
  <style name="A11yAlertDialogSubtitleStyle">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textColor">@color/a11y_alert_dialog_subtitle_text_color</item>
    <item name="fontFamily">@string/accessibility_font</item>
    <item name="android:textSize">14sp</item>
  </style>

  <!-- Material Components Theme -->
  <style name="A11yMaterialComponentsTheme" parent="Theme.MaterialComponents" />

  <style name="WearAlertDialog" parent="@style/Theme.AppCompat.NoActionBar" />
</resources>
