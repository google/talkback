<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:centerX="0.4285"
                android:centerY="1"
                android:gradientRadius="200"
                android:startColor="@color/toast_border_color_start"
                android:centerColor="@color/toast_border_color_center"
                android:endColor="@color/toast_border_color_end"
                android:type="radial" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/toast_back_color" />
            <corners android:radius="15dp"/>
        </shape>
    </item>

</layer-list>