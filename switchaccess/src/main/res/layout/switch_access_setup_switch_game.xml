<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/setup_wizard_padding_start_end"
        android:paddingEnd="@dimen/setup_wizard_padding_start_end"
        android:paddingTop="@dimen/setup_wizard_padding_heading_top"
        android:focusable="false" >

        <GridLayout
            android:id="@+id/game_board"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="true"
            android:rowOrderPreserved="true"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center" >

            <Button
                android:tag="0"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="1"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="2"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="3"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="4"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="5"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="6"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="7"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />

            <Button
                android:tag="8"
                android:height="@dimen/setup_wizard_game_piece_size"
                android:width="@dimen/setup_wizard_game_piece_size"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@color/quantum_teal_700"
                android:textSize="@dimen/setup_wizard_game_button_text_size" />
        </GridLayout>

        <Button
            android:id="@+id/reset_game_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/setup_wizard_radio_button_description_padding"
            android:text="@string/game_reset_button_title"
            style="@style/Widget.AppCompat.Button" />
    </LinearLayout>
</ScrollView>
