<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/setup_wizard_padding_radio_buttons_start"
        android:paddingEnd="@dimen/setup_wizard_padding_start_end"
        android:paddingTop="@dimen/setup_wizard_padding_heading_top"
        android:focusable="false" >

        <RadioGroup
            android:id="@+id/number_of_switches_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:orientation="vertical" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/setup_wizard_text_size"
                android:id="@+id/one_switch_radio_button"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/one_switch" />

            <TextView
                android:id="@+id/one_switch_option_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/setup_wizard_text_padding_start"
                android:paddingBottom="@dimen/setup_wizard_radio_button_description_padding"
                android:textSize="@dimen/setup_wizard_subtext_size"
                android:textAlignment="viewStart"
                android:text="@string/one_switch_description_text" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/setup_wizard_text_size"
                android:id="@+id/two_switches_radio_button"
                android:layout_weight="1"
                android:text="@string/two_switches" />

            <TextView
                android:id="@+id/two_switch_option_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/setup_wizard_text_padding_start"
                android:textSize="@dimen/setup_wizard_subtext_size"
                android:textAlignment="viewStart"
                android:text="@string/two_switches_description_text" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>
