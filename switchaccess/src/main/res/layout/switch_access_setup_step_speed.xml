<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/setup_wizard_padding_radio_buttons_start"
        android:paddingEnd="@dimen/setup_wizard_padding_start_end"
        android:paddingTop="@dimen/setup_wizard_padding_heading_top" >

        <RadioGroup
            android:id="@+id/autoscan_speeds_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fast_speed_radio_button"
                android:layout_marginBottom="@dimen/setup_wizard_radio_button_padding"
                android:textSize="@dimen/setup_wizard_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medium_speed_radio_button"
                android:checked="true"
                android:layout_marginBottom="@dimen/setup_wizard_radio_button_padding"
                android:textSize="@dimen/setup_wizard_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/slow_speed_radio_button"
                android:layout_marginBottom="@dimen/setup_wizard_radio_button_padding"
                android:textSize="@dimen/setup_wizard_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_speed_radio_button"
                android:textSize="@dimen/setup_wizard_text_size"
                android:layout_marginBottom="@dimen/setup_wizard_radio_button_padding"
                android:text="@string/custom_switch" />
        </RadioGroup>

        <EditText
            android:id="@+id/custom_speed_edit_text"
            android:clickable="true"
            android:focusable="true"
            android:inputType="number|numberDecimal"
            android:layout_marginStart="@dimen/setup_wizard_text_padding_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/custom_edit_text" />
    </LinearLayout>
</ScrollView>
